<div class="container" id="mainContainer">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">News Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <button id="scrapeButton" type="button" class="btn btn-primary btn-sm">Scrape New Articles</button>
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron jumbotron-fluid">
        <div class="container" id="titleContainer">
            <h1 class="display-4 text-center font-weight-bold">News Scraper</h1>
            <p class="lead text-center font-weight-normal">The New York Times Edition</p>
        </div>
    </div>

    {{#each articles}}
    <div class="card">
        <div class="card-header text-white bg-dark">
            {{this.title}}
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>{{this.summary}}</p>
                <footer class="blockquote-footer">{{this.author}}
                    {{!-- <cite title="Source Title">Source Title</cite> --}}
                </footer>
            </blockquote>
        </div>
    </div>
    {{/each}}

</div>